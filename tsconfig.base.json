{
	"compilerOptions": {
		"lib": ["DOM", "ES2020"],
		"jsx": "react-jsx",
		"target": "ES2020",
		"skipLibCheck": true,
		"useDefineForClassFields": true,

		/* modules */
		"module": "ESNext",
		"isolatedModules": true,
		"resolveJsonModule": true,
		"moduleResolution": "bundler",

		/* type checking */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		"rootDir": ".",
		"composite": true
	}
}
