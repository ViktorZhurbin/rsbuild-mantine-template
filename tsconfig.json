{
  "compilerOptions": {
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "target": "ES2020",
    "skipLibCheck": true,
    "useDefineForClassFields": true,

    "noEmit": true,
    "allowImportingTsExtensions": true,
    "strictNullChecks": true,

    /* modules */
    "module": "ESNext",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",

    /* type checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },

  "include": ["src"]
}
